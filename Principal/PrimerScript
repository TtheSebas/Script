#!/bin/bash

while true; do
    clear
    echo "--- Piedra, Papel o Tijera ---"
    echo "Elige una opción: (1) piedra, (2) papel, (3) tijera"
    read -p "Opción: " usuario_op

    # Selección aleatoria de la PC 
    opciones=("piedra" "papel" "tijera")
    pc_num=$(( $RANDOM % 3 ))
    pc_op=${opciones[$pc_num]}

    echo "Tú elegiste: $usuario_op"
    echo "La PC eligió: $pc_op"

    if [ "$usuario_op" == "$pc_op" ]; then
        echo "¡Es un empate!"
    elif [[ ("$usuario_op" == "piedra" && "$pc_op" == "tijera") || 
            ("$usuario_op" == "papel" && "$pc_op" == "piedra") || 
            ("$usuario_op" == "tijera" && "$pc_op" == "papel") ]]; then
        echo "¡Ganaste!"
    else
        echo "La PC gana."
    fi

    echo "Próxima partida en 5 minutos..."
    sleep 300 
done
